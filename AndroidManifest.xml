<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.minisms"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <!-- android:theme="@style/slideTheme" -->
        <activity
	        android:theme="@android:style/Theme.Translucent"
            android:launchMode="singleInstance"
            android:name="com.minisms.MiniSMSActivity" >
            <!-- 
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
             -->
        </activity>
        
        <activity
            android:launchMode="singleInstance"
            android:name="com.minisms.ConversationActivity" >
        </activity>
        
        <activity
            android:launchMode="singleInstance"
            android:name="com.minicontact.ContactListActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:launchMode="singleInstance"
            android:name="com.minicontact.ContactInfoActivity" >
        </activity>
        <receiver
            android:name="com.minisms.SMSReceiver"
            android:enabled="true"
            >
            <intent-filter >
                <action android:name="android.provider.Telephony.SMS_RECEIVED"/>
            </intent-filter>
            
        </receiver>
    </application>

        <uses-permission android:name="android.permission.SEND_SMS"/>
        <uses-permission android:name="android.permission.RECEIVE_SMS"/>
        <uses-permission android:name="android.permission.GET_TASKS"/>
        <uses-permission android:name="android.permission.READ_SMS"/>
        <uses-permission android:name="android.permission.WRITE_SMS"/>
	    <uses-permission android:name="android.permission.READ_CONTACTS"/>
	    <uses-permission android:name="android.permission.CALL_PHONE"/>
</manifest>